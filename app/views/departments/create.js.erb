$("errors").html("");

<% if @department.errors.any? %>
    $("#errors").html("<%= j error_messages_for @department %>");
<% else %>
    <% flash.notice = 'Department has been added successfully.' %>
    $("#notice_area").html("<%= j render partial: 'flash_notice' %>");
    $("#content").html("<%= j render 'index' %>");
    $("#myModel").modal("hide");
<% end %>

<% flash.notice = '' %>
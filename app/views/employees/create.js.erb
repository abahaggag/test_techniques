$("errors").html("");

<% if @employee.errors.any? %>
    $("#errors").html("<%= j error_messages_for @employee %>");
<% else %>
    <% flash.notice = 'Employee has been added successfully.' %>
    $("#notice_area").html("<%= j render partial: 'flash_notice' %>");
    $("#content").html("<%= j render partial: 'employees_table', locals: {employees: @employees} %>");
    $("#myModel").modal("hide");
<% end %>

<% flash.notice = '' %>